<div class="page-header">
  <%= link_to new_image_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Image
  <% end %>
  <h1>Listing images</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
            <th>Postgres</th>
            <th>Mysql</th>
            <th>Nginx</th>
            <th>Redis</th>
            <th>Ruby version</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @images) do |image| %>
            <td><%= image.name %></td>
            <td><%= image.postgres %></td>
            <td><%= image.mysql %></td>
            <td><%= image.nginx %></td>
            <td><%= image.redis %></td>
            <td><%= image.ruby_ver %></td>
            <td><%= link_to 'Show', image %></td>
        <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
